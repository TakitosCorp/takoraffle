@page
@model IndexModel
@{
    ViewData["Title"] = "Rifa - GalaYaki";
}

<body class="bg-raffle-bg min-h-screen flex flex-col items-center justify-center p-4 text-center bg-pattern">
<div class="max-w-6xl w-full relative py-8"> 
    <div class="relative z-10">
        <h1 class="text-5xl font-bold mb-1 text-white"> 
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-raffle-light to-raffle-hover">Rifa Especial Aniversario</span>
        </h1>
        <div class="flex justify-center items-center gap-2 mb-8"> 
            <div class="h-1 w-20 bg-raffle-light rounded-full"></div>
            <h2 class="text-3xl font-bold text-raffle-light animate-glow">GalaYaki</h2>
            <div class="h-1 w-20 bg-raffle-light rounded-full"></div>
        </div>

        <div class="bg-white/5 backdrop-blur-sm p-6 rounded-2xl border border-raffle-light/30 shadow-xl mb-4"> <!-- Cambiado mb-8 a mb-4 -->
            <div id="raffleGrid" class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6"></div>
        </div>
    </div>
</div>

    <div id="prizePopup" class="popup bg-black/70 opacity-0 transition-opacity duration-300 backdrop-blur-sm">
        <div class="flex items-center justify-center min-h-screen p-4">
            <div id="popupContent" class="animate-pop-in bg-white/30 backdrop-blur-md rounded-2xl border border-raffle-light/50 shadow-xl max-w-md w-full animate-pulse-glow overflow-hidden">
                <div class="relative">
                    <!-- Header with more opacity -->
                    <div class="px-6 py-4 flex justify-between items-center border-b border-white/30 bg-raffle-dark/50">
                        <h2 class="text-xl font-bold text-white">¡Felicidades!</h2>
                        <button id="closePopup" class="text-white/70 hover:text-white transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-x"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
                        </button>
                    </div>
                    
                    <!-- Content with more opacity -->
                    <div class="p-6 bg-white/80">
                        <div class="flex flex-col items-center mb-6">
                            <div class="w-20 h-20 bg-raffle-light/50 backdrop-blur-sm rounded-full flex items-center justify-center mb-4 border border-white/50">
                                <i id="popupIcon" class="text-black text-3xl"></i>
                            </div>
                            <div class="text-center">
                                <h3 class="text-black/90 mb-2">Has ganado:</h3>
                                <p id="prizeText" class="text-2xl font-bold text-black/90 mb-1">Premio</p>
                            </div>
                        </div>
                        
                        <div class="mt-6">
                            <button id="claimButton" class="w-full bg-raffle-dark/70 backdrop-blur-sm text-white font-medium py-3 px-4 rounded-lg border border-raffle-light/50 hover:bg-raffle-dark/90 transition-colors">
                                Reclamar premio
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script src="~/js/raffle.js"></script>
</body>
